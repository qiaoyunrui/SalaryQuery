<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juhezi.salaryquery">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".SalaryQueryApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.juhezi.salaryquery.login.LoginActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".query.QueryActivity"
            android:theme="@style/NoActionBar"></activity>

        <service android:name=".data.LoadDataService"></service>
    </application>

</manifest>
